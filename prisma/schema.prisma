generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

model AuthUser {
  id             String        @id @unique
  email          String        @unique
  email_verified Boolean
  admin_verified Boolean
  is_admin       Boolean
  profile        Profile?
  auth_session   AuthSession[]
  auth_key       AuthKey[]
  object         object[]

  @@map("auth_user")
}

model AuthBrand {
  id             String        @id @unique
  email          String        @unique
  email_verified Boolean
  admin_verified Boolean
  name           String
  location       String
  industry       String
  size           String
  goals          String
  profile        BrandProfile?
  auth_session   AuthSession[]
  auth_key       AuthKey[]
  object         object[]
}

model BrandProfile {
  user_id    String     @id
  name       String
  sport      String
  college    String
  year       String
  bio        String
  auth_brand AuthBrand? @relation(fields: [user_id], references: [id])
}

model AuthSession {
  id             String     @id @unique
  user_id        String?
  authBrandId    String?
  active_expires BigInt
  idle_expires   BigInt
  auth_user      AuthUser?  @relation(references: [id], fields: [user_id], onDelete: Cascade)
  auth_brand     AuthBrand? @relation(fields: [authBrandId], references: [id])

  @@index([user_id])
  @@index([authBrandId])
  @@unique([user_id, authBrandId])
  @@map("auth_session")
}

model AuthKey {
  id              String     @id @unique
  hashed_password String?
  user_id         String?
  authBrandId     String?
  primary_key     Boolean
  expires         BigInt?
  auth_user       AuthUser?  @relation(fields: [user_id], references: [id], onDelete: Cascade)
  auth_brand      AuthBrand? @relation(fields: [authBrandId], references: [id])

  @@index([user_id])
  @@index([authBrandId])
  @@unique([user_id, authBrandId])
  @@map("auth_key")
}

model Email {
  id            String   @id @unique
  subject       String
  email_address String
  date_sent     DateTime
  content       String

  @@map("email")
}

model object {
  id           String     @id @unique(map: "id") @default("1")
  created      DateTime?  @default(now())
  file_name    String?
  file_size    Int?
  file_type    String?
  image_number Int        @default(1) // new field
  userId       String?
  authBrandId  String?

  @@index([userId])
  @@index([authBrandId])
  @@map("object")
  @@unique([userId, authBrandId], name: "UniqueUserOrBrand")
  
  authUser     AuthUser?  @relation(fields: [userId], references: [id])
  authBrand    AuthBrand? @relation(fields: [authBrandId], references: [id])
}

model Profile {
  user_id   String    @id
  name      String
  sport     String
  college   String
  year      String
  bio       String
  auth_user AuthUser? @relation(fields: [user_id], references: [id])

  @@map("profile")
}
